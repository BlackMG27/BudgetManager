<body id="billsBody">
    <header>
        <div class="container">
            <h4 class="link-left"><a href="/">Dashboard</a></h4>
            <h4 class="link-right"><a href="/profile">Profile</a></h4>
            <h1 class="pageTitle">Spending</h1>
        </div>
    </header>
    <section>
        <div class="container">
            <div class="col s12">
                <h3 class="pageSubTitle">Bills</h3>
            </div>
        </div>
        <div class="container">
            <div class="row">
                {{!-- handlebars goes here --}}
                {{#each all}}
                <div class="col l4 m6 s12">
                    <div class="bill-entry">
                        <div class="bill-entry-title">
                            <h5>{{title}}</h5>
                        </div>
                        <div class="bill-body">
                            <p class="bill-entry-text">Date: {{date}}</p>
                            <p class="bill-entry-text">Category: {{category}}</p>
                            <p class="bill-entry-text">Amount: {{amount}} </p>
                            <button class="btn btn-large buttonDelete" data-billId="{{id}}">Delete Bill</button>
                        </div>
                    </div>
                </div>
                {{!-- handlebars end --}}
                {{/each}}
            </div>

        </div>
    </section>
    <script src="/assets/js/bills.js"></script>
</body>