<body id="spendingBody">
    <header>
        <div class="container">
            <h4 class="link-left"><a href="/">Dashboard</a></h4>
            <h4 class="link-right"><a href="/profile">Profile</a></h4>
            <h1 class="pageTitle">Budgets</h1>
        </div>
    </header>

    <section>
        <div class="container">
            <div class="row">
                <div class="col l6 s12">
                    <h3 class="pageSubTitle b-text">View Budgets</h3>
                    {{!-- <div id="spendingSection">
                        {{#each all}}
                        <div class="spending-item">
                            <p class="spending-text">{{description}}</p>
                            <span>{{date}} | ${{amount}} </span>
                            <button class="btn spending-delete">Delete</button>
                        </div>
                        {{/each}}
                    </div> --}}
                    {{#each data}}
                    <div class="cap-item">
                        <h5 class="b-text center-align">{{catName}}</h5>
                        {{!-- bar goes here --}}
                        <div class="skillbar clearfix " data-percent="{{monthPercent}}%">
                            <div class="skillbar-title" style="background: #ffed78;"></div>
                            <div class="skillbar-bar" style="background: #142d4c;"></div>
                            <div class="skill-bar-percent"></div>
                        </div>
                        <div class="row">
                            {{!-- bar stops --}}
                            <div class="input-field col s12">
                                <input disabled value={{monthSpend}} id="disabled" type="text" class="validate">
                                <label for="disabled">Total Spend this Month</label>
                            </div>
                        </div>
                        <div class="row">
                            <div class="input-field col s12">
                                <input disabled value={{catCap}} id="disabled" type="text" class="validate">
                                <label for="disabled">Budget Amount</label>
                            </div>
                        </div>
                        <div class="row">
                            <div class="input-field col s12">
                                <input disabled value={{catWarn}} id="disabled" type="text" class="validate">
                                <label for="disabled">Warning Amount</label>
                            </div>
                        </div>

                    </div>
                    {{/each}}
                </div>
                <div class="col l6 s12">
                    <h3 class="pageSubTitle b-text">Edit Budgets</h3>
                    <form id="spendingForm">
                        <div class="input-field s12">
                            <select name="categoryList" id="spendingList">
                                {{!-- enter handlebars for this part --}}
                                <option value="" disabled selected>Choose your category</option>
                                {{#each catNames}}
                                <option value="{{@index}}">{{category}}</option>
                                {{/each}}
                            </select>
                            <br>
                            <div class="input-field s12">
                                <input type="text" id="targetAmount" tabindex="0" class="spending-input b-text"
                                    placeholder="Enter Target Amount">
                                <label for="targetAmount" class="spending-label b-text">Target Amount</label>
                            </div>
                            <br>
                            <div class="input-field s12">
                                <input type="text" id="warningAmount" tabindex="0" class="spending-input b-text"
                                    placeholder="Enter Warning Amount">
                                <label for="warningAmount" class="spending-label b-text">Warning Amount</label>
                            </div>


                        </div>

                        <a href="/caps/1" type="submit" class="btn btn-large bigButton">Add to Budget</a>
                    </form>
                </div>
            </div>
        </div>
    </section>
    <script src="https://code.jquery.com/jquery-3.4.0.min.js"
        integrity="sha256-BJeo0qm959uMBGb65z40ejJYGSgR7REI4+CW1fNKwOg=" crossorigin="anonymous"></script>
    <script src="/assets/js/caps.js"></script>
</body>